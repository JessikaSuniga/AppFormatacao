<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@color/Gainsboro"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:layout_margin="@dimen/margem">

        <TextView
            android:id="@+id/textView"
            android:layout_width="333dp"
            android:layout_height="161dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@drawable/border_shadow" />

        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/texto" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtTexto"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <ImageButton
                android:layout_width="43dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_upload" />
        </LinearLayout>



        <TextView
        android:id="@+id/tamanhoLetra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/tamanhoLetra" />

        <SeekBar
            android:id="@+id/seekBarTamanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"/>

        <TextView
            android:id="@+id/estilo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/estilo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/marginTop">

            <CheckBox
                android:id="@+id/negrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negrito" />

            <CheckBox
                android:id="@+id/italico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/italico" />

            <CheckBox
                android:id="@+id/maiusculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maiusculo" />
        </LinearLayout>

        <TextView
            android:id="@+id/corLetra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/corLetra" />

    <RadioGroup
        android:id="@+id/rdgSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/azul" />

        <RadioButton
                android:id="@+id/vermelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

                android:text="@string/vermelho" />

            <RadioButton
                android:id="@+id/verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verde" />
        </RadioGroup>

    </LinearLayout>

</ScrollView>